<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Animations" />
	<style name="Animations.GrowFromCentre">
		<item name="@android:windowEnterAnimation">@anim/grow_from_centre</item>
		<item name="@android:windowExitAnimation">@anim/shrink_to_centre</item>
	</style>
	
	<!-- General text -->
	<color name="general_text_color">#ffffff</color>
	<style name="generaltextView" parent="@android:style/TextAppearance.Medium">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:textColor">@color/general_text_color</item>		
	</style>
	
	<!--  Activity view -->
	<!-- <color name="activity_view_color">#ffffffff</color>-->
	<!-- <color name="activity_view_color">#BFAE99</color>-->
	<!-- <color name="activity_view_color">#EBEBEB</color>-->
	<color name="activity_view_color">#F5F5F5</color>
	<style name="ActivityView">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:background">@color/activity_view_color</item>
	</style>
	<!-- <color name="activity_bar_color">#ff0000ff</color>-->
	<!-- <color name="activity_bar_color">#F27405</color>-->
	<color name="activity_bar_color">#ff6600</color>
	<style name="ActivityBar">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">44dp</item>
		<item name="android:layout_alignParentTop">true</item>
		<item name="android:background">@color/activity_bar_color</item>
	</style>
	<color name="activity_bar_text_color">#ffffff</color>
	<style name="ActivityBarText" parent="@android:style/TextAppearance.Large">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:textColor">@color/activity_bar_text_color</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<!-- Button bar -->
	<color name="button_bar_color">#4C4646</color>
	<style name="ButtonBar">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">60dp</item>
		<item name="android:background">@color/button_bar_color</item>
	</style>
	
	<!-- Button bar with text-->
	<color name="button_bar_with_text_color">#BFAE99</color>
	<style name="ButtonBarWithText">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">60dp</item>
		<item name="android:background">@color/button_bar_with_text_color</item>
	</style>
	
	<!-- Button bar with text-->
	<color name="dish_button_bar_with_text_color">#BFAE99</color>
	<style name="DishButtonBarWithText">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">55dp</item>
		<item name="android:background">@color/dish_button_bar_with_text_color</item>
	</style>
	
	<!-- sub heading bar -->
	<color name="subHeading_bar_color">#ff6600</color>
	<style name="subHeadingBar">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">24dp</item>
		<item name="android:background">@color/subHeading_bar_color</item>
	</style>
	<color name="subHeading_bar_text_color">#ffffff</color>
	<style name="subHeadingBarText" parent="@android:style/TextAppearance.Medium">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:textColor">@color/subHeading_bar_text_color</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<!-- CoverFlow style -->
	<dimen name="coverFlowitemwidth">100dp</dimen>
    <dimen name="coverFlowitemheight">100dp</dimen>
  	
  	<color name="offerListbackgroundcolor">#ffffff</color>
	<color name="coverFlowFramebackgroundcolor">#BFAE99</color>
	<!-- <color name="coverFlowbackgroundcolor">#F2A663</color>-->
	<declare-styleable name="FavouriteThumbnailGallery">
    	<attr name="android:galleryItemBackground" />
    </declare-styleable>
     
    <!-- List item style -->
    <color name ="list_item_background_color">#BFAE99</color>
    <style name="list_item">
    	<item name="android:background">@color/list_item_background_color</item>
    </style>
    
</resources>