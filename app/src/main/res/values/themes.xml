<resources xmlns:tools="http://schemas.android.com/tools">
	<style name="Theme.Artcodes" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>

		<item name="android:windowBackground">@android:color/white</item>
		<item name="colorPrimary">@color/apptheme_primary</item>
		<item name="colorPrimaryDark">@color/apptheme_primary_dark</item>
		<item name="colorAccent">@color/apptheme_accent</item>

		<item name="android:timePickerDialogTheme" tools:ignore="NewApi">@style/Theme.Artcodes.Dialog</item>
		<item name="android:datePickerDialogTheme" tools:ignore="NewApi">@style/Theme.Artcodes.Dialog</item>
		<item name="alertDialogTheme">@style/Theme.Artcodes.Dialog</item>
	</style>

	<style name="Theme.Artcodes.Transparent" parent="Theme.Artcodes">
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:background">@null</item>
		<item name="background">@null</item>

		<item name="android:windowActionBarOverlay" tools:ignore="NewApi">true</item>
		<item name="android:windowActionModeOverlay" tools:ignore="NewApi">true</item>
		<item name="windowActionBarOverlay">true</item>

		<item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
	</style>

	<style name="Theme.Artcodes.About" parent="Theme.AppCompat">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="colorPrimary">@color/apptheme_primary</item>
		<item name="colorPrimaryDark">@color/apptheme_primary_dark</item>
		<item name="android:windowBackground">@color/apptheme_primary</item>
	</style>

	<style name="TextAppearance.Design.CollapsingToolbar.Expanded.Transparent" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
		<item name="android:textColor">#0FFF</item>
	</style>

	<!-- Button style -->
	<style name="Theme.Artcodes.Button">
		<item name="android:background">@drawable/button</item>
		<item name="android:textColor">#FFF</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textAllCaps" tools:ignore="NewApi">true</item>
		<item name="textAllCaps">true</item>
	</style>

	<style name="Theme.Artcodes.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorPrimary">@color/apptheme_primary</item>
		<item name="colorAccent">@color/apptheme_accent</item>
	</style>

	<style name="ButtonDark">
		<item name="colorButtonNormal">#3000</item>
		<item name="android:colorButtonNormal" tools:ignore="NewApi">#3000</item>
	</style>

	<style name="ThemeOverlay.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
		<item name="colorAccent">#EEE</item>
		<item name="android:colorAccent" tools:ignore="NewApi">#EEE</item>
	</style>
</resources>
